<!--Detail page for the selected property.-->
<mvc:View
	controllerName="ui.view.Product"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:gmaps="openui5.googlemaps">
	<Page
		id="page"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" 
        showHeader="false">
<!--
		<headerContent>
			<Button
				icon="sap-icon://email"
				visible="{device>/isPhone}"
				tooltip="{i18n>TO_CART_BUTTON_TOOLTIP}"
				press="handleCartButtonPress" />
		</headerContent>
-->
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://add"
					text="{i18n>PRODUCT_ADD_BUTTON_TEXT}"
					tooltip="{i18n>PRODUCT_ADD_BUTTON_TOOLTIP}"
					press="handleAddButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="CAD">
				<attributes>
					<ObjectAttribute
						text="{City}" />
<!--
					<ObjectAttribute
						text="{ShortDescription}" />
-->
					<ObjectAttribute
						text="{sqft}sq ft" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path : 'status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'status',
							formatter : '.formatter.statusState'
						}" />
				</firstStatus>
			</ObjectHeader>
<!--
			<VBox alignItems="Center">
				<Image
					src= "{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
					decorative="true"
					densityAware="false" />
			</VBox>
-->
            <gmaps:Map lat="{lat}" lng="{lng}" height="250px" zoom="18" class="materialCardNoHover">
                <gmaps:markers>
                    <gmaps:Marker lat="{lat}" lng="{lng}" info="Bondi Beach" />
                </gmaps:markers>
            </gmaps:Map>
		</content>
	</Page>
</mvc:View>