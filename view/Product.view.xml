<!--Detail page for the selected property.-->
<mvc:View
	controllerName="ui.view.Product"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:gmaps="openui5.googlemaps">
	<Page
		id="page"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress" 
        showHeader="false">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button
					icon="sap-icon://add"
					text="{i18n>PRODUCT_ADD_BUTTON_TEXT}"
					tooltip="{i18n>PRODUCT_ADD_BUTTON_TOOLTIP}"
					press="handleAddButtonPress" />
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{Name}"
				number="{
					path : 'Price',
					formatter : '.formatter.price'
				}"
				numberUnit="CAD">
				<attributes>
					<ObjectAttribute
						text="{City}" />
					<ObjectAttribute
						text="{sqft}sq ft" />
				</attributes>
				<firstStatus>
					<ObjectStatus
						text="{
							path : 'status',
							formatter : '.formatter.statusText'
						}"
						state="{
							path : 'status',
							formatter : '.formatter.statusState'
						}" />
				</firstStatus>
			</ObjectHeader>
            <l:Grid defaultSpan="L6 M12 S12">
                <l:content>
                    <gmaps:Map lat="{lat}" lng="{lng}" height="400px" width="700px" zoom="18" class="materialCardNoHover">
                        <gmaps:markers>
                            <gmaps:Marker lat="{lat}" lng="{lng}" info="Bondi Beach" />
                        </gmaps:markers>
                    </gmaps:Map>
                    <Image src="{streetViewUrl}" class="materialCardNoHover"></Image> 
                </l:content>
            </l:Grid>
		</content>
	</Page>
</mvc:View>