<!--contains properties from a given category (master)-->
<mvc:View controllerName="ui.view.Category"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:control="control"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		title="{
                    path : 'CategoryName',
                    formatter : '.formatter.productCategory'
                }" 
		showNavButton="true"
		navButtonPress="handleNavButtonPress"
		showFooter="{device>/isNoPhone}" >
		<headerContent>
			<Button
				icon="sap-icon://email"
				tooltip="{i18n>TO_CART_BUTTON_TOOLTIP}"
				press="handleCartButtonPress">
			</Button>
		</headerContent>
<!--
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
-->
		<content>
			<List
				id="productList"
				mode="{device>/listMode}"
				select="handleProductListSelect"
				noDataText="{i18n>CATEGORY_NO_DATA}"
				busyIndicatorDelay="0"
				items="{
					path : '/Products',
					sorter : {
						path : 'Name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						title="{Name}"
						number="{sqft}"
						numberUnit="sq ft"
						press="handleProductListItemPress"
						iconDensityAware="false" >
						<attributes>
							<ObjectAttribute text="{City}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus
								text="{
									path : 'status',
									formatter : '.formatter.statusText'
								}"
								state="{
									path : 'status',
									formatter : '.formatter.statusState'
								}" />
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>
