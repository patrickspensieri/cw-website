<!--Main master panel, displaying search and property types.-->
<mvc:View controllerName="ui.view.Home"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
		title="{i18n>HOME_TITLE}"
		showFooter="{device>/isNoPhone}" >
		<headerContent>
<!--            cart button-->
			<Button
				icon="sap-icon://cart"
				tooltip="{i18n>TO_CART_BUTTON_TOOLTIP}"
				press="handleCartButtonPress">
			</Button>
		</headerContent>
		<subHeader>
			<Toolbar id="searchBar">
				<SearchField
					id="searchField"
					showRefreshButton="{device>/isNoTouch}"
					placeholder="{i18n>HOME_SEARCH_PLACEHOLDER}"
					search="handleSearch"
					tooltip="{i18n>HOME_SEARCH_TOOLTIP}"
					width="100%">
				</SearchField>
			</Toolbar>
		</subHeader>
<!--
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
-->
		<content>
			<PullToRefresh
				id="pullToRefresh"
				visible="{device>/isTouch}"
				refresh="handleRefresh" />
			<!-- This list shows the search results -->
<!--            This list shows the welcome page sections-->
<!--
            <List
				id="welcomeList"
				mode="{device>/listMode}"
				select="handleWelcomeListSelect"
				noDataText="{i18n>HOME_NO_DATA}"
				items="{
					path : '/Welcome'
					}
				}">
            </List>
-->
<!--            NavigationList works, but looks different than the List (replace later)-->
            <tnt:NavigationList id="navigationList" width="320px">
                <tnt:NavigationListItem
                        text="Welcome"
                        select="handleWelcomeButtonPress">
                    <tnt:NavigationListItem text="About">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Our Services">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Contact Us">
                    </tnt:NavigationListItem>
                </tnt:NavigationListItem>
            </tnt:NavigationList>
			<List
				id="productList"
				mode="{device>/listMode}"
				select="handleProductListSelect"
				noDataText="{i18n>HOME_NO_DATA}"
				items="{
					path : '/Products',
					sorter : {
						path : 'Name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						icon="{
							path : 'PictureUrl',
							formatter : '.formatter.pictureUrl'
						}"
						title="{Name}"
						number="{
							path : 'Price',
							formatter : '.formatter.price'
						}"
						numberUnit="EUR"
						press="handleProductListItemPress"
						iconDensityAware="false" >
						<attributes>
							<ObjectAttribute text="{SupplierName}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus
								text="{
									path : 'status',
									formatter : '.formatter.statusText'
								}"
								state="{
									path : 'status',
									formatter : '.formatter.statusState'
								}" />
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
<!--
            <List
				id="homeList"
				headerText="{i18n>HOME_PAGE_LIST_HEADER}"
				mode="None"
				items="{
					path : '/HomePages',
					sorter : {
						path : 'HomeName',
						descending: false
					}
				}">
				<items>
					<StandardListItem
						title="{HomePageName}"
						type="Active"
						press="handleHomePageListItemPress" >
						<customData>
							<core:CustomData
								key="id"
								value="{HomePage}" />
						</customData>
					</StandardListItem>
				</items>
			</List>
-->
            
			<!-- This list shows the product categories -->
            <List
				id="categoryList"
				headerText="{i18n>HOME_CATEGORY_LIST_HEADER}"
				mode="None"
				items="{
					path : '/ProductCategories',
					sorter : {
						path : 'CategoryName',
						descending: false
					}
				}">
				<items>
					<StandardListItem
						title="{CategoryName}"
						type="Active"
						counter="{NumberOfProducts}"
						press="handleCategoryListItemPress" >
						<customData>
							<core:CustomData
								key="id"
								value="{Category}" />
						</customData>
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>