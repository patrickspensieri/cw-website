<!--Main master panel, displaying search and property types.-->
<mvc:View controllerName="ui.view.Home"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:l="sap.ui.layout"
	xmlns:h="http://www.w3.org/1999/xhtml">
	<Page
		id="page"
        showHeader="false"
        showFooter="true">
<!--        		showFooter="{device>/isNoPhone}"-->
<!--		<headerContent>-->
<!--            cart button-->
<!--
			<Button
				icon="sap-icon://email"
				tooltip="{i18n>TO_CART_BUTTON_TOOLTIP}"
				press="handleCartButtonPress">
			</Button>
-->
<!--		</headerContent>-->
		<subHeader>
			<Toolbar id="searchBar">
				<SearchField
					id="searchField"
					showRefreshButton="{device>/isNoTouch}"
					placeholder="{i18n>SEARCH}"
					search="handleSearch"
					tooltip="{i18n>HOME_SEARCH_TOOLTIP}"
					width="100%">
				</SearchField>
			</Toolbar>
		</subHeader>
        <footer>
            <Toolbar class="customFooter">
				<l:HorizontalLayout>
                    <Button
                        id="facebook"
                        icon="img/socialmedia/facebook.svg"
                        press="handleSocialMediaButtonPress"/>
                    <Button
                        id="instagram"
                        icon="img/socialmedia/instagram.svg"
                        press="handleSocialMediaButtonPress"/>
                    <Button
                        id="twitter"
                        icon="img/socialmedia/twitter.svg"
                        press="handleSocialMediaButtonPress"/>
                    <Button
                        id="linkedin"
                        icon="img/socialmedia/linkedin.svg"
                        press="handleSocialMediaButtonPress"/>
                    <ToolbarSpacer/>
                </l:HorizontalLayout>
			</Toolbar>
		</footer>
		<content>
			<PullToRefresh
				id="pullToRefresh"
				visible="{device>/isTouch}"
				refresh="handleRefresh" />
            <!-- welcome page sections-->
            <List 
				id="welcomePageSectionList"
				headerText="{i18n>WELCOME_TITLE}"
				mode="None"
				items="{
					path : '/WelcomePageSections'
				}"
                onAfterRendering="bindWelcomePageSectionList">
				<items>
					<StandardListItem
                        title="{Section}"
                        icon="{Icon}" 
						type="Navigation"
						press="handleWelcomeListItemPress" >
					</StandardListItem>
				</items>
			</List>
            <!-- property search results -->
			<List
				id="productList"
				mode="{device>/listMode}"
				select="handleProductListSelect"
				noDataText="{i18n>HOME_NO_DATA}"
				items="{
					path : '/Products',
					sorter : {
						path : 'Name',
						descending : false
					}
				}">
				<items>
					<ObjectListItem
						type="{device>/listItemType}"
						title="{Name}"
						number="{sqft}"
						numberUnit="sq ft"
						press="handleProductListItemPress"
						iconDensityAware="false" >
						<attributes>
							<ObjectAttribute text="{City}"/>
						</attributes>
						<firstStatus>
							<ObjectStatus
								text="{
									path : 'status',
									formatter : '.formatter.statusText'
								}"
								state="{
									path : 'status',
									formatter : '.formatter.statusState'
								}" />
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
            
			<!-- spaces -->
            <List
				id="categoryList"
				headerText="{i18n>HOME_CATEGORY_LIST_HEADER}"
				mode="None"
				items="{
					path : '/ProductCategories',
					sorter : {
						path : 'CategoryName',
						descending: false
					}
				}">
				<items>
					<StandardListItem
                        title="{
                            path : 'CategoryName',
                            formatter : '.formatter.productCategory'
                            }"
						type="Active"
                        icon="{Icon}"
						counter="{NumberOfProducts}"
						press="handleCategoryListItemPress" >
						<customData>
							<core:CustomData
								key="id"
								value="{Category}" />
						</customData>
					</StandardListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>